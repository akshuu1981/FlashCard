{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions"
    ],
    "rewrites": [
      {
        "source": "/api/getFlashcardDeck",
        "function": "getFlashcardDeck"
      },
      {
        "source": "/api/getSpeechAudio",
        "function": "getSpeechAudio"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}
